{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ScriptHost", "WebWorker"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "include": ["src"]
}
