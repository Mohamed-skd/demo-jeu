{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "app-types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["DOM", "ESNext", "ScriptHost", "WebWorker"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "app-dist",
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020"
  }
}
